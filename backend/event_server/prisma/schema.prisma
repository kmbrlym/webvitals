generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id         String   @id @default(uuid()) // Use UUID to prevent IDOR
  username   String   @unique
  password   String
  createdAt  DateTime @default(now()) @map("created_at")

  sessions       Session[]
  pageVisits     PageVisit[]
  mouseMovements MouseMovement[]
  timeSpent      TimeSpent[]
}

model Session {
  id        String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  startTime DateTime @default(now()) @map("start_time")
  endTime   DateTime? @map("end_time")

  pageVisits     PageVisit[]
  mouseMovements MouseMovement[]
  timeSpent      TimeSpent[]
}

model PageVisit {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String
  pageUrl   String   @map("page_url")
  visitedAt DateTime @default(now()) @map("visited_at")
  leftAt    DateTime? @map("left_at")
}

model MouseMovement {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String
  xCoord    Int      @map("x_coord")
  yCoord    Int      @map("y_coord")
  createdAt DateTime @default(now()) @map("created_at")
}

model TimeSpent {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  session      Session  @relation(fields: [sessionId], references: [id])
  sessionId    String
  elapsedTime  Int      @default(0) @map("elapsed_time")
  lastModified DateTime @default(now()) @map("last_modified")
}
